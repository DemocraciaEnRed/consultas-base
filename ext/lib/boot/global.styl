@import 'ext/node_modules/argob-poncho/dist/css/poncho.css'

$main-color = #A695d6
$main-color-resalted = #7868a6
//$main-text-color = $main-color
$main-btn-color = #A69546
$main-btn-color-hover = #e3cc5f

// estos botones son los de fondo de color y letras blancas
.btn-primary
  background-color: $main-btn-color
  
.btn-primary:hover,
.btn-primary:focus,
.btn-primary:active,
.btn-primary.focus,
.btn-primary.active
  background-color: $main-btn-color-hover
  
// estos botones son los de fondo gris y texto de color
.btn-link
  color: $main-color
  
.btn-link:hover,
.btn-link:focus
  color: $main-color-resalted
